<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPCore_MVC</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
</head>
<body>
    <header class="bg-primary text-white p-3 d-flex navbar">
       <h3><a class="nav-item text-white" href="@Url.Action("Index", "Home")">Shop App</a></h3>
       <div class="d-flex align-items-center gap-3">
           <a class="nav-item text-white" asp-controller="Products" asp-action="Index">Products</a>
            @if (!User.Identity.IsAuthenticated)
            {
                <div>
                    <a class="nav-item text-white" href="./User/Create.html">Register</a>
                    <a class="nav-item text-white" href="./User/Login.html">Login</a>
                </div>
            }
            else
            {
                <a class="btn btn-outline-light" asp-controller="Products" asp-action="Create">Add</a>
                <a class="nav-item text-white" href="@Url.Action("CreateRole", "User")">New Role</a>
                    <a class="nav-item text-white" href="@Url.Action("AssignRole", "User")">Assign Role</a>
                <h4>@User.Identity.Name</h4>
                <form asp-action="Logout" asp-controller="User">
                        <button class="m-1 btn btn-outline-warning" type="submit">Logout</button>
                </form>
            }

       </div>
    </header>
    <div class="container">
        <main role="main" class="p-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            Important footer
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
